// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  description   String?
  dueDate String
  status    String
  creationTime  String
  taskOwner   User @relation(fields: [taskOwnerId], references: [id])
  taskOwnerId Int
  priority String
  tags Tag[]
}

model User {
  id        Int     @id @default(autoincrement())
  name      String @unique
  tasks Task[]
}

model Tag {
  id        Int     @id @default(autoincrement())
  name      String @unique
  tasks Task[]
}
